<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="orionhealth.app" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.main.MyMedicationActivity"
            android:label="@string/title_activity_my_medication" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.main.AddMedicationActivity"
            android:label="@string/title_activity_add_medication"
            android:parentActivityName=".activities.main.MyMedicationActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.main.MyMedicationActivity" />
        </activity>
        <activity
            android:name=".activities.main.EditMedicationActivity"
            android:label="@string/title_activity_edit_medication"
            android:parentActivityName=".activities.main.MyMedicationActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.main.MyMedicationActivity" />
        </activity>
		</application>

	<uses-permission android:name="android.permission.INTERNET"/>

</manifest>
