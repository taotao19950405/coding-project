<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp"
              android:orientation="vertical"
              android:id="@+id/display_first_last_name">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"
                  android:orientation="horizontal"
                  android:id="@+id/display_name">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/text_label_name"
                android:id="@+id/display_medication_name"/>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/list_display_name"
                  android:paddingLeft="15dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"
                  android:orientation="horizontal"
                  android:id="@+id/display_dosage">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/text_label_dosage"
                android:id="@+id/display_medication_display"/>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/list_display_dosage"
                  android:paddingLeft="15dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:gravity="center_vertical"/>
    </LinearLayout>

</LinearLayout>