<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/list_group"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="8dp"
	android:orientation="horizontal"
	xmlns:android="http://schemas.android.com/apk/res/android">

	<LinearLayout
		  android:layout_width="0dp"
		  android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"
                  android:orientation="horizontal"
                  android:id="@+id/display_name">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/text_label_name"
                android:id="@+id/display_medication_name"/>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/list_display_name"
                  android:paddingLeft="15dp"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingLeft="15dp"
                  android:paddingRight="15dp"
                  android:orientation="horizontal"
                  android:id="@+id/display_dosage">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/text_label_dosage"
                android:id="@+id/display_medication_display"/>

        <TextView xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/list_display_dosage"
                  android:paddingLeft="15dp"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
									android:layout_weight="1"
                  android:gravity="center_vertical"/>

    </LinearLayout>
	</LinearLayout>

	<RelativeLayout
		android:layout_width="wrap_content"
		android:layout_height="match_parent"
		android:id="@+id/indicator">

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:src="@drawable/arrow_down_grey_11dp"/>

	</RelativeLayout>

</LinearLayout>

