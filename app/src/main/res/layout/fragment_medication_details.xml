<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
							xmlns:tools="http://schemas.android.com/tools"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:id="@+id/linear_layout_vertical_details_medication"
							tools:context="orionhealth.app.activities.AddMedicationActivity">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
								xmlns:tools="http://schemas.android.com/tools"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal">
		<TextView
			android:id="@+id/text_label_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/text_label_name"/>

		<EditText android:id="@+id/edit_text_name"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:hint="@string/edit_text_name_hint"/>

	</LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
								xmlns:tools="http://schemas.android.com/tools"
								android:layout_width="match_parent"
								android:layout_height="wrap_content"
								android:orientation="horizontal">
		<TextView
			android:id="@+id/text_label_dosage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/text_label_dosage"/>

		<EditText android:id="@+id/edit_text_dosage"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:hint="@string/edit_text_dosage_hint"/>

	</LinearLayout>
    
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/unit_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/text_reasonForUse"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/text_label_reasonForUse"/>

		<EditText android:id="@+id/edit_text_reasonForUse"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="@string/edit_text_reasonForUse_hint"/>

	</LinearLayout>


	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/text_effectiveStart"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/text_label_effectiveStart"/>

		<EditText android:id="@+id/edit_text_effectiveStart"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
            android:inputType="date"
			android:hint="@string/edit_text_effectiveStart_hint"/>

		</LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_instructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_label_instructions"/>

        <EditText android:id="@+id/edit_text_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:hint="@string/edit_text_instructions_hint"/>

    </LinearLayout>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/text_notes"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/text_label_notes"/>

		<EditText android:id="@+id/edit_text_notes"
			android:layout_width="match_parent"
            android:isScrollContainer="true"
            android:layout_height="wrap_content"
            android:minHeight="120dp"
            android:inputType="textMultiLine"
			android:hint="@string/edit_text_notes_hint"/>

	</LinearLayout>

</LinearLayout>