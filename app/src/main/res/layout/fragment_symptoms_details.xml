<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/details_symptoms"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical"
	android:paddingLeft="10dp"
	android:paddingRight="10dp"
	tools:context="orionhealth.app.activities.main.AddSymptomsActivity">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/basic_information_header"
		android:padding="10dp"
		android:textSize="9pt"/>

	<View
		android:layout_width="match_parent"
		android:layout_height="0.7dp"
		android:padding="10dp"
		android:background="@android:color/darker_gray"/>

	<GridLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:rowCount="2"
			android:columnCount="2"
			android:padding="10dp"
			android:orientation="horizontal">

					<TextView
							android:id="@+id/text_label_symptoms"
							android:layout_row="0"
							android:layout_column="0"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="@string/text_label_Symptoms" />

					<EditText
							android:id="@+id/edit_text_symptoms"
							android:layout_row="1"
							android:layout_column="1"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:hint="@string/edit_text_symptoms_hint" />


	</GridLayout>

</LinearLayout>