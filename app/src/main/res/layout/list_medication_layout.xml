<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
							xmlns:tools="http://schemas.android.com/tools"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:orientation="horizontal"
							android:id="@+id/display_first_last_name">
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/text_label_name"
		android:id="@+id/display_medication_name"/>

	<TextView xmlns:android="http://schemas.android.com/apk/res/android"
						android:id="@+id/list_display_name"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/text_label_dosage"
		android:id="@+id/display_medication_display"/>

	<TextView xmlns:android="http://schemas.android.com/apk/res/android"
						android:id="@+id/list_display_dosage"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"/>
</LinearLayout>